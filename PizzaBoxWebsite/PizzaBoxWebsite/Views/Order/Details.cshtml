@*@model PizzaBox.Domain.Models.Orders*@
@model OrderViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    decimal? grossCost = 0.00M;
}

<h1>Details</h1>

<div>
    <h4>Orders</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalCost)
        </dt>
        <dd class="col-sm-10">
            $@Html.DisplayFor(model => model.TotalCost)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderTimestamp)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderTimestamp)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Store)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Store.StoreLocation)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.UserName)
        </dd>
        <dt class="col-sm-2">
            Itemized Receipt
        </dt>
    </dl>
    <table class="table">
        @foreach (var item in Model.PizzasSold)
        {
            <tr>
                <p>
                    @Html.DisplayFor(modeItem => item.PizzaSize)
                    @Html.DisplayFor(modelItem => item.PizzaName)
                    with
                    @Html.DisplayFor(modelItem => item.PizzaCrust) 
                    ($@Html.DisplayFor(modelItem => item.PizzaCrustNavigation.CrustCost))
                    crust:
                    $@Html.DisplayFor(modelItem => item.TotalCost)
                </p>
            </tr>
            grossCost += item.TotalCost;
        }
        <tr>
            <p>
                Sales Tax: $@(grossCost * Globals.SALES_TAX)
            </p>
        </tr>
    </table>
</div>
<div>
    @*<a asp-action="Edit" asp-route-id="@Model.OrderId">Edit</a> |*@
    <a asp-action="OrderHistory">Back to List</a>
</div>
